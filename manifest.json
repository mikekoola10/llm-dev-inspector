{
  "manifest_version": 3,
  "name": "LLM Dev Inspector",
  "version": "0.1.0",
  "description": "AI-generated insights and safe patch diffs for web development.",
  "devtools_page": "devtools/devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
